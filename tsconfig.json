// Cannot upgrade to TS v4.3 yet because of https://github.com/styleguidist/react-docgen-typescript/issues/356
{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules", "**/*.stories.*"]
}
